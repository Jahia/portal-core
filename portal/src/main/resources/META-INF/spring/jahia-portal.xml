<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/mvc
       http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd">

    <!-- Services -->
    <bean id="portalService" name="PortalService" class="org.jahia.modules.portal.service.PortalService"/>

    <!-- JSR 303 -->
    <mvc:annotation-driven conversion-service="springTypeConversionService"/>
    <bean id="messageSource" class="org.jahia.utils.i18n.ModuleMessageSource"/>

    <!-- Filters -->
    <!-- bean name="PortalTabFilter" class="org.jahia.modules.portal.filter.PortalTabFilter">
        <property name="priority" value="-10"/>
        <property name="applyOnNodeTypes" value="jnt:portalArea"/>
        <property name="description" value="Add portal JavaScript API in the page and disable edition in the page"/>
    </bean -->
    <bean name="PortalSkinFilter" class="org.jahia.modules.portal.filter.PortalSkinFilter">
        <property name="skin" value="${portalSkin:skins.portal}"/>
        <property name="description" value="Filter that add skins to the current resource."/>
        <property name="priority" value="45"/>
        <property name="applyOnNodeTypes" value="jmix:portalComponent"/>
        <property name="skipOnConfigurations" value="include,wrapper"/>
        <property name="skipOnModes" value="studio"/>
    </bean>

    <!-- Error handlers -->
    <bean name="UserPortalPageHandler" class="org.jahia.modules.portal.error.UserPortalPageHandler"/>
    <bean name="PortalTabRedirectHandler" class="org.jahia.modules.portal.error.PortalTabRedirectHandler">
        <property name="urlResolverFactory" ref="urlResolverFactory"/>
        <property name="portalService" ref="PortalService"/>
    </bean>

    <!-- Actions -->
    <bean class="org.jahia.modules.portal.action.AddWidgetAction">
        <property name="portalService" ref="PortalService"/>
    </bean>
</beans>